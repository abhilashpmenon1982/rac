<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="abc.sap.controller.detail"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{Report>/reportName}">
				<Table id="idPuertoRicoTable" inset="false" items="{ path: '/PuertoRicoCollection' }">
					<columns>
						<Column width="12em">
							<Text text="Description"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="License"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
							<Text text="Arcos Tcode"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
							<Text text="NDC"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{Description}"/>
								<Text text="{License}"/>
								<Text text="{Arcos}"/>
								<Text text="{NDC}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</Page>
		</pages>
	</App>
</mvc:View>